#!@PYTHON@

import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

# Adicionar site-packages ao path
site_packages = os.path.join('@prefix@', 'lib', 'python3.12', 'site-packages')
if os.path.exists(site_packages):
    sys.path.insert(0, site_packages)

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)

locale.bindtextdomain('neo', localedir)
locale.textdomain('neo')
gettext.install('neo', localedir)

# Verificar se Scrapy está disponível
try:
    import scrapy
except ImportError:
    print("ERROR: Scrapy not found!", file=sys.stderr)
    print("Please ensure Scrapy wheels were installed correctly.", file=sys.stderr)
    sys.exit(1)

if __name__ == '__main__':
    import gi

    gi.require_version('Gtk', '4.0')
    gi.require_version('Adw', '1')

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'neo.gresource'))
    resource._register()

    from neo import main
    sys.exit(main.main(VERSION))